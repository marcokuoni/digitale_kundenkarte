FROM node:latest
WORKDIR /usr/src/app

ARG CLIENT_PORT
ARG SERVER_URL
ARG SCHEMA_VERSION
ARG SCHEMA_VERSION_KEY
ARG JWT_COOKIE_NAME
ENV PORT=${CLIENT_PORT}
ENV SERVER_URL=${SERVER_URL}
ENV SCHEMA_VERSION=${SCHEMA_VERSION}
ENV SCHEMA_VERSION_KEY=${SCHEMA_VERSION_KEY}
ENV JWT_COOKIE_NAME=${JWT_COOKIE_NAME}
ENV HOST=0.0.0.0

CMD ["npm","run","dev"]